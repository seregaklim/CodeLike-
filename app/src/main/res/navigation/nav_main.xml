<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.activity.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/actionFeedFragmentToEditPostFragment"
            app:destination="@id/editPostFragment" />
        <action
            android:id="@+id/actionFeedFragmentToNewPostFragment"
            app:destination="@id/newPostFragment" />
        <action
            android:id="@+id/actionFeedFragmentToNewVideoFragment"
            app:destination="@id/newVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/editPostFragment"
        android:name="ru.netology.nmedia.activity.EditPostFragment"
        android:label="fragment_edit_post"
        tools:layout="@layout/fragment_edit_post" />
    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nmedia.activity.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />
    <fragment
        android:id="@+id/newVideoFragment"
        android:name="ru.netology.nmedia.activity.NewVideoFragment"
        android:label="fragment_new_video"
        tools:layout="@layout/fragment_new_video" />
</navigation>